<h1>Movie Database Title Search</h1>


<div class="container">
	<%= form_tag do %>
		<%= text_field_tag :movie, params[:movie], placeholder: "Enter Movie Title" %>
		<%= submit_tag "Search", name: nil %>
	<% end %>
</div>

<div class="container">
	<p><%= @results_message %></p>

	<%= if @index != []
		render 'results'
	end %>

</div>


<div class="footer">
	<p>Powered by <a href="https://www.themoviedb.org/">The Movie Database</a></p>
</div>